    "version": "0.2.0",
    "configurations": [
        // Конфигурация для локальной отладки
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./Core/s112/armgcc/_build/nrf52811_xxaa.out",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "runToMain": true,
            "svdFile": "nrf52811.svd",
            "preLaunchTask": "Build_project",
            "configFiles": [
                "${workspaceRoot}/NRF52811.cfg"
            ]
        },

        // Конфигурация для удаленной отладки
        {
            "name": "External GDB Server",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            "executable": "./Core/s112/armgcc/_build/nrf52811_xxaa.out",
            "runToMain": true,
            "svdFile": "nrf52811.svd",
            "gdbTarget": "localhost:3333",
            "preLaunchTask": "Build_project"
        }
    ]
}