{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build project",
            "command": "",
            "args": [
                "mingw32-make.exe",
                "--directory=${workspaceFolder}/Core/s112/armgcc"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Компилятор: \"arm-none-eabi-gcc.exe\""
        },

        {
            "type": "shell",
            "label": "Program softdevice",
            "command": "",
            "args": [
                "${workspaceFolder}/flash-load-scripts/program_softdevice.bat"
            ],
            "problemMatcher": [],
            "detail": "Загрузка softdevice во внутренюю Flash память"
        },

        {
            "type": "shell",
            "label": "Program hex file",
            "command": "",
            "args": [
                "${workspaceFolder}/flash-load-scripts/program_hex.bat"
            ],
            "problemMatcher": [],
            "detail": "Загрузка hex файла во внутренюю Flash память"
        }
    ]
}